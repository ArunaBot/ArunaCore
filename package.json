{
  "name": "arunacore",
  "version": "1.0.0-BETA.6",
  "description": "ArunaCore is an open source websocket server made with nodejs for intercomunication between applications.",
  "main": "build/nodejs/src/main/start.js",
  "type": "module",
  "scripts": {
    "start": "node --import=./build/nodejs/main/registerLoader.js build/nodejs/main/start.js",
    "lint": "eslint ./src --fix",
    "build": "npx tsc --build",
    "postbuild": "node src/scripts/updateResources.cjs",
    "predist": "npm run build",
    "dist": "node src/scripts/dist.cjs",
    "pretest": "npm run build",
    "test": "node --import=./build/nodejs/main/registerLoader.js build/nodejs/tests/test.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ArunaBot/ArunaCore.git"
  },
  "author": "ArunaTeam",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/ArunaBot/ArunaCore/issues"
  },
  "homepage": "https://github.com/ArunaBot/ArunaCore#readme",
  "engines": {
    "node": ">=20.11.1"
  },
  "dependencies": {
    "@promisepending/logger.js": "^1.1.1",
    "resolve": "^1.22.11",
    "semver": "^7.7.3",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.39.1",
    "@types/module-alias": "^2.0.4",
    "@types/node": "^24.10.1",
    "@types/resolve": "^1.20.6",
    "@types/semver": "^7.7.1",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "archiver": "^7.0.1",
    "arunacore-api": "^1.0.0-BETA.5",
    "eslint": "^9.39.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^7.2.1",
    "globals": "^16.5.0",
    "typescript": "^5.9.3"
  }
}
